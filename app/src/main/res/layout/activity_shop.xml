<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShopActivity">
    <bwie.com.mydimensionmall.uile.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

    </bwie.com.mydimensionmall.uile.CustomViewPager>
<RadioGroup
    android:id="@+id/radio_bun"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:background="#ffffff"
    android:padding="10dp">
    <RadioButton
        android:id="@+id/bun_homepage"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:button="@null"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/homepage_selector" />
    <RadioButton
        android:id="@+id/bun_classification"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:button="@null"
        android:layout_weight="1"
        android:layout_marginRight="40dp"
        android:background="@drawable/classification_selector" />
    <RadioButton
        android:id="@+id/bun_shoppingcart"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:button="@null"
        android:layout_weight="1"
        android:background="@drawable/shoppingcart_selector" />
    <RadioButton
        android:id="@+id/bun_listnr"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:button="@null"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:background="@drawable/btn_list" />
    <RadioButton
        android:id="@+id/bun_mymall"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:button="@null"
        android:layout_weight="1"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/mymall_selector" />

</RadioGroup>
</LinearLayout>