<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <ImageView
        android:id="@+id/image_choose_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/common_nav_btn_menu_n_hdpi"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle_90_edit"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/image_choose_search"
        android:layout_toLeftOf="@id/text_search_choose"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:textSize="20dp"
            android:background="@null"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:hint="请输入你要搜索的商品"/>
    </LinearLayout>

    <TextView
        android:id="@+id/text_search_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:text="搜索"/>


</RelativeLayout>
